<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Datos</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Custom styles -->
    <style>
        .container{
            display:flex;
            justify-content: center;
            align-items:center;
            /* height:50vh; */
            width:100%;
            margin-top: 30px;
        }
        .table-container {
            max-width: 1000px;
            margin: 0 auto;
        }
        .admin-container{
            display:flex;
            align-items:center;
            justify-content: space-around;
            width: 300px;
        }
        .contenedorDerecho{
            display:flex;
            justify-content:flex-end;
            margin-top: 10px;
            margin-bottom:10px;
        }

    </style>
</head>
<body>
    <%- include('partials/banner', { showBackButton: false }) %>
    <div class="container">
        <div class="table-container">
            <div class="titulo">
                <h1 class="text-center mb-4">Listado de PowerBi</h1>
            </div>
            <% if (isAdmin) { %>
                <div class="contenedorDerecho">
                    <div class="admin-container">
                        <a href="/new" class="btn btn-primary">Agregar nuevo</a>
                        
                        <a href="/admin_roles" class="btn btn-primary">Usuarios</a>
                        
                    </div>
                </div>
            <% } %>
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Categoría</th>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Link</th>
                        <th>Vigencia</th>
                        <% if (isAdmin) { %>
                            <th>Acciones</th>
                        <% } %>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach(item => { %>
                        <tr>
                            <td><%= item.categoria %></td>
                            <td><%= item.nombre %></td>
                            <td><%= item.descripcion %></td>
                            <td><a href="<%= item.link %>" class="btn btn-sm btn-info">Enlace</a></td>
                            <td><%= item.vigencia %></td>
                            <% if (isAdmin) { %>
                                <td>
                                    <a href="/edit/<%= item.id %>" class="btn btn-sm btn-primary">Editar</a>
                                </td>
                            <% } %>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
            
            
        </div>
    </div>
</body>
</html>
